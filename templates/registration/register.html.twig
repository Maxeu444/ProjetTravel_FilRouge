{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block nav %}{% endblock %}

{% block body %}

<div id="loginRegisterContainer">

	<div id="loginFormContainer">
		<h1 id="loginFormTitle">Inscription</h1>

		{{ form_start(registrationForm) }}

		{{ form_row(registrationForm.username, {'attr': {'class': 'registerContainer'}}, {
		label: "Nom d'utilisateur"
		}) }}

		{{ form_row(registrationForm.plainPassword, {'attr': {'class': 'registerContainer'}}, {
		label: 'Mot de passe'
		}) }}

		{{form_row(registrationForm.firstname, {'attr': {'class': 'registerContainer'}}) }}

		{{form_row(registrationForm.lastname, {'attr': {'class': 'registerContainer'}}
		)}}

		{{form_row(registrationForm.email, {'attr': {'class': 'registerContainer'}})}}

		{{form_row(registrationForm.agreeTerms, {'attr': {'class': 'agree'}}) }}


		<button type="submit" id="logRegButton">Creér mon compte</button>

		<div class="login-link">
			<p>J'ai déjà un compte?
				<a href="{{ path('app_login') }}">Me Connecter</a>
			</p>
		</div>

		{{ form_end(registrationForm) }}
	</div>

	<div class="sideImage" id="sideRegister">
		<img id="sideLogo" src="{{asset('./images/logo.svg')}}" alt="">
	</div>

</div>

{% endblock %}

{% block homeFooter %}{% endblock %}